<%- include('partials/header') %>
	<div class="login-container">
		<h2>Přihlášení</h2>
		<form action="/admin" method="POST" enctype="application/x-www-form-urlencoded">
			<div class="form-group">
				<label for="username">Uživatel:</label>
				<input type="text" id="username" name="username" placeholder="Jméno" required />
			</div>
			<div class="form-group">
				<label for="password">Heslo:</label>
				<input type="password" id="password" name="password" placeholder="Heslo" required />
			</div>
			<button type="submit">Přihlásit se</button>
		</form>
	</div>
	<%- include('partials/footer') %>