<%- include('partials/header') %> <% if (allowUserRegistration) { %>
<div class="register-container">
	<h2>Registrace</h2>
	<form
		action="/registrace"
		method="POST"
		enctype="application/x-www-form-urlencoded">
		<div class="form-group">
			<label for="username">Jméno:</label>
			<input
				type="text"
				id="username"
				name="username"
				placeholder="Jméno"
				required />
		</div>
		<div class="form-group">
			<label for="password">Heslo:</label>
			<input
				type="password"
				id="password"
				name="password"
				placeholder="Heslo"
				required />
		</div>
		<div class="form-group">
			<label for="username">Instagram:</label>
			<input
				type="text"
				id="instagram"
				name="instagram"
				placeholder="Instagram (např. obchoduj.na.krizikovi)"
				required />
		</div>
		<div class="form-group">
			<label for="username">E-mail:</label>
			<input
				type="email"
				id="email"
				name="email"
				placeholder="E-mail"
				required />
		</div>
		<button type="submit">Registrovat se</button>
	</form>
</div>
<% } else { %>
<h1 style="display: flex; justify-content: center; align-items: center">
	Registrace není povolena
</h1>
<% } %> <%- include('partials/footer') %>
